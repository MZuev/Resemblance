<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_intermediate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.resemblance.GameIntermediateActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/game_intermediate_score_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intermediateRoundText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="@string/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intermediateScoreText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/intermediateAnswerView" />

    </LinearLayout>
</RelativeLayout>
