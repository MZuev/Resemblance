<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.resemblance.CreateGameActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:text="Набор карт:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createChooseSetInvitation"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createGameSetPicker" />

        <TextView
            android:text="Число раундов: 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createGameRoundsText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="9"
            android:progress="2"
            android:id="@+id/createGameRoundsSeekBar" />

        <Button
            android:text="Создать"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createGameCreateButton"
            android:onClick="onCreateClick"
            style="@style/Widget.AppCompat.Button" />
    </LinearLayout>
</RelativeLayout>
