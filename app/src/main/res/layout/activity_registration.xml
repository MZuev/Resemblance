<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.resemblance.RegistrationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="@string/registration_choose_nickname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registrationNickField"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:text="@string/registration_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrationPasswordText1"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/registrationPasswordField1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:text="@string/registration_repeat_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrationPasswordText2"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/registrationPasswordField2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:text="@string/registration_register_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrationRegisterButton"
            style="@style/Widget.AppCompat.Button"
            android:onClick="onRegisterTouch" />

    </LinearLayout>
</RelativeLayout>
